<odoo>
    <record id="wizard_product_attribute_merge_form" model="ir.ui.view">
        <field name="name">wizard.product.attribute.merge.form</field>
        <field name="model">wizard.product.attribute.merge</field>
        <field name="arch" type="xml">
            <form string="Merge Product Attribute">
                <group
                    name="test"
                >
                    <field name="product_attribute_id" />
                    <field name="into_product_attribute_id" />
                </group>
                <group>
                  <!-- <field name="available_attribute_ids" invisible="1" /> -->
                  <field name="attribute_values_merge_action_ids" nolabel="1">
                    <tree
                      editable="true"
                      create="false"
                      delete="0"
                      open="0"
                      >
                    <field name="attribute_value_id" />
                    <field
                      name="attribute_value_action"
                      string="action"
                      />
                    <field
                      name="merge_into_attribute_value_id"
                      invisible="1"
                      />
                    <field
                      name="merge_into_attribute_value_id"
                      attrs="{'readonly':[['attribute_value_action', '!=', 'merge' ]]}"
                      />
                  </tree>
                </field>
              </group>
                <footer>
                    <button
                        name="action_merge"
                        type="object"
                        string="Validate"
                        class="btn-primary"
                    />
                    <button special="cancel" string="Cancel" class="btn-default" />
                </footer>
            </form>
        </field>
    </record>
</odoo>
